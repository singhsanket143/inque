<!DOCTYPE html>
<html>
<head>
  <title>Hackquora</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <%if user_signed_in?%>
        <li><%= link_to "Logout", destroy_user_session_path ,method: :delete,:id=>"custom"%></strong></li>
    <%end%>
  </nav>

  <% if notice %>
    <script type="text/javascript">
        noty({text: '<%= notice %>', type: 'alert', timeout: 3500, progressBar: true});
    </script>

<% end %>

<% if alert %>

    <script type="text/javascript">
        noty({text: '<%= alert %>', type: 'error', timeout: 5000, progressBar: true});
    </script>
<% end %>

<%= yield %>

</body>
</html>
